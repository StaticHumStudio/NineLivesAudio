<Page
    x:Class="AudioBookshelfApp.Views.DownloadsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AudioBookshelfApp.Models"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Padding="{StaticResource PagePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Downloads" Style="{StaticResource PageTitleStyle}"/>

            <Button Grid.Column="1"
                    Command="{x:Bind ViewModel.ClearCompletedCommand}"
                    Visibility="{x:Bind HasCompletedDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                    ToolTipService.ToolTip="Clear completed downloads"
                    Style="{StaticResource IconButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                    <TextBlock Text="Clear Completed"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Loading -->
        <ProgressRing Grid.Row="1"
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                      Width="50"
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Foreground="{StaticResource SigilGoldDimBrush}"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityInverseConverter}}">
            <StackPanel Spacing="24">

                <!-- Active Downloads Section -->
                <StackPanel Visibility="{x:Bind HasActiveDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Active Downloads"
                               Style="{StaticResource SectionTitleStyle}"
                               Margin="0,0,0,12"/>

                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.ActiveDownloads}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="8"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:DownloadItem">
                                <Border Background="{StaticResource VoidSurfaceBrush}"
                                        CornerRadius="{StaticResource RadiusMD}"
                                        Padding="16"
                                        BorderBrush="{StaticResource DustBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Title -->
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{x:Bind Title}"
                                                   Style="{StaticResource CardTitleStyle}"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Status & Progress -->
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="{x:Bind Status}"
                                                   Style="{StaticResource CaptionStyle}"
                                                   Margin="0,4,0,0"/>

                                        <!-- Progress Bar -->
                                        <ProgressBar Grid.Row="2"
                                                     Grid.Column="0"
                                                     Value="{x:Bind Progress, Mode=OneWay}"
                                                     Maximum="100"
                                                     Style="{StaticResource DownloadProgressStyle}"
                                                     Margin="0,8,16,0"/>

                                        <!-- Controls -->
                                        <StackPanel Grid.Column="1"
                                                    Grid.RowSpan="3"
                                                    Orientation="Horizontal"
                                                    Spacing="4"
                                                    VerticalAlignment="Center">
                                            <Button Tag="{x:Bind}"
                                                    Click="PauseResumeButton_Click"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTipService.ToolTip="Pause/Resume">
                                                <FontIcon Glyph="&#xE769;" FontSize="14"/>
                                            </Button>
                                            <Button Tag="{x:Bind}"
                                                    Click="CancelButton_Click"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTipService.ToolTip="Cancel">
                                                <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

                <!-- Completed Downloads Section -->
                <StackPanel Visibility="{x:Bind HasCompletedDownloads, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Completed"
                               Style="{StaticResource SectionTitleStyle}"
                               Margin="0,0,0,12"/>

                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.CompletedDownloads}">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="8"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:DownloadItem">
                                <Border Background="{StaticResource VoidSurfaceBrush}"
                                        CornerRadius="{StaticResource RadiusMD}"
                                        Padding="16"
                                        BorderBrush="{StaticResource DustBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkmark -->
                                        <FontIcon Grid.Column="0"
                                                  Glyph="&#xE73E;"
                                                  Foreground="{StaticResource RitualSuccessBrush}"
                                                  FontSize="20"
                                                  Margin="0,0,12,0"/>

                                        <!-- Title -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Title}"
                                                       Style="{StaticResource CardTitleStyle}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{x:Bind CompletedAt}"
                                                           Style="{StaticResource CaptionStyle}"/>
                                                <TextBlock Text="Â·" Style="{StaticResource CaptionStyle}" Opacity="0.5"/>
                                                <TextBlock Text="{x:Bind SizeDisplay}"
                                                           Style="{StaticResource CaptionStyle}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="2"
                                                Tag="{x:Bind}"
                                                Click="DeleteButton_Click"
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTipService.ToolTip="Delete download">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel Visibility="{x:Bind ShowEmptyState, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Style="{StaticResource EmptyStateContainerStyle}">
                    <FontIcon Glyph="&#xE896;" Style="{StaticResource EmptyStateIconStyle}"/>
                    <TextBlock Text="No downloads"
                               Style="{StaticResource EmptyStateTitleStyle}"/>
                    <TextBlock Text="Download audiobooks from your library for offline listening"
                               Style="{StaticResource EmptyStateSubtitleStyle}"/>
                    <Button Content="Go to Library" Click="GoToLibrary_Click"
                            Style="{ThemeResource AccentButtonStyle}" Margin="0,16,0,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Error Banner -->
        <Border Grid.Row="1"
                VerticalAlignment="Top"
                Visibility="{x:Bind ViewModel.HasError, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="{StaticResource RitualErrorFaintBrush}"
                CornerRadius="{StaticResource RadiusSM}"
                Padding="12"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE7BA;" Foreground="{StaticResource RitualErrorBrush}" Margin="0,0,12,0"/>
                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                           TextWrapping="Wrap" VerticalAlignment="Center"
                           Foreground="{StaticResource MistBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
