<UserControl
    x:Class="NineLivesAudio.Controls.MiniPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}"
          Height="80"
          Padding="16,8">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Album Art -->
        <Border Grid.Column="0"
                Width="64"
                Height="64"
                CornerRadius="4"
                Margin="0,0,16,0"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
            <Image x:Name="CoverImage"
                   Stretch="UniformToFill"/>
        </Border>

        <!-- Book Info & Progress -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    Spacing="4">
            <TextBlock x:Name="TitleText"
                       Text="No book playing"
                       FontWeight="SemiBold"
                       TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="AuthorText"
                       Text=""
                       Opacity="0.7"
                       FontSize="12"
                       TextTrimming="CharacterEllipsis"/>
            <ProgressBar x:Name="ProgressBar"
                         Value="0"
                         Maximum="100"
                         Style="{StaticResource MiniPlayerProgressStyle}"/>
        </StackPanel>

        <!-- Playback Controls -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    Spacing="4"
                    VerticalAlignment="Center">
            <Button x:Name="BtnRewind"
                    Click="BtnRewind_Click"
                    Style="{StaticResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="Rewind 10 seconds">
                <FontIcon Glyph="&#xE892;" FontSize="16"/>
            </Button>
            <Button x:Name="BtnPlayPause"
                    Click="BtnPlayPause_Click"
                    Width="48"
                    Height="48"
                    CornerRadius="24">
                <FontIcon x:Name="PlayPauseIcon" Glyph="&#xE768;" FontSize="20"/>
            </Button>
            <Button x:Name="BtnForward"
                    Click="BtnForward_Click"
                    Style="{StaticResource TransparentButtonStyle}"
                    ToolTipService.ToolTip="Forward 30 seconds">
                <FontIcon Glyph="&#xE893;" FontSize="16"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
